<section class="session">
  <h3>Welcome to Manang.ph</h3>

  <%= form_for @conn, session_path(@conn, :create), [name: :login], fn f -> %>
    <div class="form-group">
      <%= email_input f, :email, class: "form-control", placeholder: "Email" %>
    </div>
    <div class="form-group">
      <%= password_input f, :password, class: "form-control", placeholder: "Password" %>
    </div>

    <%= submit "Login", class: "btn btn-primary block full-width m-b" %>
  <% end %>
</section>
